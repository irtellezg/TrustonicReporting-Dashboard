{
    "name": "trustonic-reporting-root",
    "version": "1.0.0",
    "description": "Root package for Trustonic Reporting",
    "scripts": {
        "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
        "start:backend": "cd backend && npm run dev",
        "start:frontend": "cd frontend && npm run dev",
        "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
        "db:setup": "psql -U postgres -h localhost -d trustonic_reporting -f database/schema_devices.sql"
    },
    "devDependencies": {
        "concurrently": "^9.2.1"
    },
    "dependencies": {
        "socket.io": "^4.8.3",
        "socket.io-client": "^4.8.3"
    }
}
